#!/bin/bash
#---------------------------------------------------------------------------------------------#
case "$1" in
#---------------------------------------------------------------------------------------------#
compile)
	sbt clean compile 
;;
#---------------------------------------------------------------------------------------------#
package)
	sbt clean package
;;
#---------------------------------------------------------------------------------------------#
spark)
	spark-submit                                    \
	  --class "SparkGraph"                          \
	  --master local[4]                             \
	  --driver-memory 4G                            \
	  --executor-memory 4G                          \
	  ./target/scala-2.10/spark-graph_2.10-1.0.jar  \
	  words.txt                                     \
	  temp
;;
#---------------------------------------------------------------------------------------------#
*)
    echo "+-----------------------------------------------------------+"
    echo "|  ./run               -- Help for ENDPLAY CORE             |"
    echo "+-----------------------------------------------------------+"
    echo "|  ./run compile       -- sbt clean compile                 |"
    echo "|  ./run package       -- sbt clean package                 |"
    echo "|  ./run spark         -- spark-submit                      |" 
    echo "+-----------------------------------------------------------+"
;;
#---------------------------------------------------------------------------------------------#
esac
exit 0
#---------------------------------------------------------------------------------------------#
